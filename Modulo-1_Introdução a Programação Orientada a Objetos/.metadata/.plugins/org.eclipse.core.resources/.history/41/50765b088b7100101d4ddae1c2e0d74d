package areaTriangulo;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		double xA, xB, xC, yA, yB, yC;
		
		System.out.println("Entre com as medias do triangulo X");
		xA = sc.nextDouble();
		xB = sc.nextDouble();
		xC = sc.nextDouble();
		System.out.println("Entre com as medias do triangulo Y");
		yA = sc.nextDouble();
		yB = sc.nextDouble();
		yC = sc.nextDouble();
		
		double p = (xA + xB + xC) / 2.0;
		
		double areaTrianguloX = Math.sqrt(p * (p - xA) * (p - xB) * (p - xC));
		double areaTrianguloY = Math.sqrt(p * (p - yA) * (p - yB) * (p - yC));
		
		
		sc.close();
		

	}

}
